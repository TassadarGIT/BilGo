<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="@color/gray_2">
        <LinearLayout
            android:id="@+id/linearFirst"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:elevation="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_my_location_24"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_location_on_24"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearSecond"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/linearFirst"
            android:gravity="center">
            <TextView
                android:id="@+id/deptText"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/gray_1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Departure"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center|start"
                android:paddingHorizontal="8dp"/>
            <TextView
                android:id="@+id/destText"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/gray_1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="Destination"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center|start"
                android:paddingHorizontal="8dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="@color/gray_3">
        <RelativeLayout
            android:id="@+id/linearThird"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tripTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="6dp"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/gray_2"
                android:text="HH:MM"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/seatsAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/tripTime"
                android:background="@drawable/round_rectangle"
                android:backgroundTint="@color/gray_2"
                android:padding="6dp"
                android:text="X slots"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/joinBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/my_secondary"/>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>